{
	"name": "books-monorepo",
	"version": "0.1.0",
	"dependencies": {
		"dayjs": "^1.11.10",
		"uuid": "^9.0.1"
	},
	"engines": {
		"npm": ">=10.2.4",
		"node": ">=20.9.0"
	},
	"workspaces": [
		"./projects/*"
	],
	"scripts": {
		"start": "run-p start-client start-server",
		"start-production": "npm run install-packages && npm run build && npm run start-server-production",
		"start-client": "npm start -w @books/client",
		"start-server": "npm start -w @books/server",
		"start-server-production": "node --experimental-specifier-resolution=node bin/server/index.js",
		"install-packages": "npm install",
		"build": "npm run build-shared && npm run build-client && npm run build-server",
		"build-shared": "npm run build --workspace=@books/shared",
		"build-client": "npm run build --workspace=@books/client",
		"build-server": "npm run build --workspace=@books/server",
		"lint": "npm run lint-client && npm run lint-server && npm run lint-shared",
		"lint-client": "npm run lint --workspace=@books/client",
		"lint-server": "npm run lint --workspace=@books/server",
		"lint-shared": "npm run lint --workspace=@books/shared",
		"analyze": "source-map-explorer 'bin/client/*.js'",
		"debug": "npm run build-server"
	},
	"type": "module",
	"devDependencies": {
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^7.5.0",
		"@typescript-eslint/parser": "^7.5.0",
		"eslint": "^8.57.0",
		"eslint-plugin-deprecation": "^2.0.0",
		"eslint-plugin-react": "^7.34.1",
		"nodemon": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"pre-commit": "^1.2.2",
		"source-map-explorer": "^2.5.3",
		"typescript": "^5.4.3"
	}
}