{
	"compilerOptions": {
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@books/shared": [
				"../shared/src/*"
			],
			"@books/*": [
				"../*/src"
			],
		},
		"outDir": "../../bin/client",
	},
	"extends": "../../tsconfig.base.json",
	"include": [
		"src",
		"vite.config.ts"
	],
	"references": [
		{
			"path": "../shared"
		}
	]
}