{
   "compileOnSave": true,
   "compilerOptions": {
      "lib": [
         "es2019"
      ],
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2019",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
         "*": [
            "node_modules/*",
            "src/types/*"
         ]
      }
   },
   "include": [
      "index.ts"
   ]
}