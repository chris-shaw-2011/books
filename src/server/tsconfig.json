{
   "compileOnSave": true,
   "compilerOptions": {
      "lib": [
         "es2019"
      ],
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2019",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "strictNullChecks": true,
      "outDir": "../../dist",
      "baseUrl": ".",
      "paths": {
         "*": [
            "node_modules/*",
         ]
      },
      "strict": true,
   },
   "include": [
      "index.ts",
   ]
}